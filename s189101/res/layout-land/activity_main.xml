<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/bgimage"
        android:scaleType="centerCrop"
        android:src="@drawable/backgroundland" />

     <Button
         android:id="@+id/settingsBtn"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/norbutton"
         android:layout_marginBottom="15dp"
         android:layout_marginLeft="19dp"
         android:layout_toRightOf="@+id/playBtn"
         android:minWidth="100dip"
         android:text="@string/rules"
         android:textColor="#FFFF0000" />

     <Button
         android:id="@+id/playBtn"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/settingsBtn"
         android:layout_alignBottom="@+id/settingsBtn"
         android:layout_alignParentLeft="true"
         android:layout_marginLeft="153dp"
         android:minWidth="100dip"
         android:text="@string/play"
         android:textColor="#FFFF0000" />

     <ImageButton
         android:id="@+id/norbutton"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/settingsBtn"
         android:layout_alignParentBottom="true"
         android:contentDescription="@string/norbutton"
         android:src="@drawable/no" />

     <ImageButton
         android:id="@+id/ukbutton"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_toLeftOf="@+id/settingsBtn"
         android:contentDescription="@string/ukbutton"
         android:src="@drawable/uk" />
        
</RelativeLayout>